<div>
  <h1 class="text-3xl font-bold leading-6 mb-6"> New Article </h1>
  <%= form_with(model: @article, method: :post, url: articles_path) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "block text-sm font-medium mb-2 " %>
      <%= f.text_field :title, class: "py-3 px-4 block w-full border sborder-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
    </div>

    <div class="mb-3">
      <%= f.label :body, class: "block text-sm font-medium mb-2" %>
      <%= f.text_area :body, class: "py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none  dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
    </div>
    <div class="flex justify-end">
      <%= f.submit class: "py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
    </div>

  <% end %>
</div>
